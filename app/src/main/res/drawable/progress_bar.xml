<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="270"
    android:toDegrees="270">
    <shape
        android:innerRadiusRatio="2.4"
        android:shape="ring"
        android:thickness="6dp"
        android:useLevel="true">

        <corners
            android:bottomRightRadius="300dp"
            android:bottomLeftRadius="300dp"
            android:topRightRadius="300dp"
            android:topLeftRadius="300dp"
            />

        <gradient
            android:angle="30"
            android:endColor="@color/darkSecondary"
            android:startColor="@color/darkAccent"
            android:type="sweep"
            android:useLevel="false" />
    </shape>
</rotate>

